@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "ro-RO";
}



<!DOCTYPE html>
<html lang="ro">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen flex flex-col">
    <header class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto w-full px-6 py-6
                flex items-center justify-between gap-8">

            <!-- Stânga: Logo + titlu (click → home) -->
            <a href="~/" class="flex items-center gap-6 group">

                <!-- LOGO -->
                <img src="~/images/cec-logo.png"
                     class="w-auto"
                     style="height: 100px; object-fit: contain;"
                     alt="Logo instituție" />

                <div class="flex flex-col">
                    <h1 class="text-3xl font-bold tracking-tight text-gray-800
                           group-hover:text-blue-600 transition">
                        @Localizer["PageTitle"]
                    </h1>
                    <span class="text-lg text-gray-500">
                        @Localizer["PageSubtitle"]
                    </span>
                </div>
            </a>

            <!-- Dreapta: Select limba -->
            <div>
                <form asp-controller="Language" asp-action="ChangeLanguage" method="post">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                    <select name="culture"
                            onchange="this.form.submit()"
                            class="border rounded-lg px-4 py-3 text-base shadow-sm
                                   focus:ring-2 focus:ring-blue-500 focus:outline-none cursor-pointer">
                        <option value="ro-RO" selected="@(currentCulture == "ro-RO")">RO</option>
                        <option value="ru-RU" selected="@(currentCulture == "ru-RU")">RU</option>
                        <option value="en-US" selected="@(currentCulture == "en-US")">EN</option>
                    </select>
                </form>
            </div>

        </div>
    </header>


    <!-- MAIN CONTENT -->
    <main class="flex-1 w-full max-w-7xl mx-auto px-6 py-10">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="mt-16">

        <!-- Bandă tricolor (stil modern, mai subtilă) -->
        <div class="h-2 w-full bg-gradient-to-r from-red-600 via-yellow-400 to-blue-600"></div>

        <div class="bg-white py-8">
            <div class="max-w-7xl mx-auto text-center">
                <p class="text-gray-600 text-sm">
                    ©2025 Comisia Electorală Centrală.
                </p>
            </div>
        </div>
    </footer>

</body>

</html>
