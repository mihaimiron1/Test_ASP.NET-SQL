<!-- Dropdown pentru Mobile -->
<br />
<div class="block sm:hidden mb-4">
    <div class="relative">
        <button onclick="toggleOptionsDropdown()"
                class="w-full flex items-center justify-between px-4 py-3 bg-white border-2 border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 transition-colors duration-200">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <!--  Content for bar dropdown Consilieri Locali -->
                <span class="font-medium text-gray-700" id="selectedOptionText">
                    @Localizer["ConsilieriLocali"]
                </span>
            </div>
            <svg class="w-5 h-5 text-gray-600 transition-transform duration-200" id="dropdownArrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
        </button>

        <div id="optionsDropdown" class="hidden absolute z-50 w-full mt-2 bg-white border border-gray-200 rounded-lg shadow-lg">
            <!-- First rounded-t-lg
                 Last  rounded-b-lg
            -->
            
            <!-- text-gray-700 -->
            <a href="@Url.Action("PrimariMunicipali", "Rezultate")"
               class="block px-4 py-3 hover:bg-blue-50 transition-colors duration-200 text-gray-700 rounded-t-lg">
                @Localizer["PrimariMunicipali"]
            </a>

            <!-- text-gray-700 -->
            <a href="@Url.Action("PrimariLocali", "Rezultate")"
               class="block px-4 py-3 hover:bg-blue-50 transition-colors duration-200 text-gray-700">
                @Localizer["PrimariLocali"]
            </a>

            <!-- text-gray-700 -->
            <a href="@Url.Action("ConsilieriMunicipali", "Rezultate")"
               class="block px-4 py-3 hover:bg-blue-50 transition-colors duration-200 text-gray-700">
                @Localizer["ConsilieriMunicipali"]
            </a>

            <!-- text-gray-700 -->
            <a href="@Url.Action("ConsilieriRaionali", "Rezultate")"
               class="block px-4 py-3 hover:bg-blue-50 transition-colors duration-200 text-gray-700">
                @Localizer["ConsilieriRaionali"]
            </a>
            
            <!-- bg-blue-50 text-blue-600 font-semibold -->
            <a href="@Url.Action("ConsilieriLocali", "Rezultate")"
               class="block px-4 py-3 hover:bg-blue-50 transition-colors duration-200 bg-blue-50 text-blue-600 font-semibold rounded-t-lg">
                @Localizer["ConsilieriLocali"]
            </a>
            
        </div>
    </div>
</div>








