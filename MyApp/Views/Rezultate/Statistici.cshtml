@{
    ViewData["Title"] = "Statistici";
    var prezenta = ViewBag.Prezenta ?? 0;
}


<div class="flex items-center justify-between mb-4">
    <div>
        <h2 class="text-xl font-semibold text-gray-800">Prezența la vot</h2>
    </div>
    <span class="text-2xl font-bold text-blue-600">@prezenta%</span>
</div>

<div id="donut-chart" class="py-4" data-presence="@prezenta"></div>
<div id="chart-selection-label" class="text-sm text-gray-600 mt-2"></div>




<h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-6">
    Participare pe Grupe de Vârstă
</h3>

<div id="age-participation-chart" data-age-data='@Html.Raw(ViewBag.AgeData)'>
    <!-- Barele se generează\a dinamic -->
</div>
